<style>
  #filters{
    display: flex;
    flex-wrap: wrap;
    margin-left: 2rem;
    align-items: center;
    
  }

  .filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }

  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }

  .filter-link{
    text-decoration: none; 
  color: inherit; 
  cursor: pointer;
  }

  .tax-info{
    display: none;
  }

  .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 3rem;
    padding: 1rem;
    margin-left: 3rem;
    display: flex;
    align-items: center;
    
  }

  .btn-search{
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;

  }

  .search-input{
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 0.9rem;
  }

  .btn-search i{
    display: inline;
    margin-right: 0.5rem;
  }

  .btn-search:hover{
    background-color: #fe424d;
    color: #fff;
  }
</style>
